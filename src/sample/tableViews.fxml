<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.mealsTablesController" prefWidth="700" >
<top>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Selezionare l'elemento desiderato"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>

    <TableView fx:id="tbDietItems" GridPane.columnIndex="0"
               GridPane.rowIndex="1" prefWidth="550" prefHeight="620">
        <columns>
            <TableColumn fx:id="id" text="ID" visible="false">
            </TableColumn>
            <TableColumn  fx:id="unitFood" text="Alimento">
            </TableColumn>
            <TableColumn fx:id="totKcal" text="Tot Kcal">
            </TableColumn>
            <TableColumn fx:id="grCarboidrati" text="Gr. Carboidrati">
            </TableColumn>
            <TableColumn fx:id="grProtein" text="Gr. Proteine">
            </TableColumn>
            <TableColumn fx:id="grGrassi" text="Gr. Grassi">
            </TableColumn>
        </columns>



    </TableView>
</top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <bottom>
        <VBox spacing="10" >
             <HBox alignment="BOTTOM_RIGHT"  >
                <Button fx:id="okButton" text="OK"></Button>
                <Button fx:id="cancelButton" text="Cancel"></Button>
            </HBox>
        </VBox>
</bottom>

</BorderPane>
