<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.Controller"
          fx:id="opend"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="0">
    <Text text="Inserire User e Password:" textAlignment="CENTER"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="1"         >
    <Text text="(Se non impostati lasciare i campi vuoti)" textAlignment="CENTER"/>
    </HBox>


    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="3">
    <Label text="User Name:"
           GridPane.columnIndex="0" />

    <TextField fx:id="userId"
            GridPane.columnIndex="1" maxWidth="136"/>
    </HBox>
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="4">
    <Label text="Password:   "
           GridPane.columnIndex="0" />

    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="1"  maxWidth="136"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_RIGHT"
           GridPane.rowIndex="6">
        <Button text="Login" fx:id="submitButton"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

</GridPane>

