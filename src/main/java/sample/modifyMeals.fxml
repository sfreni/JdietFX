<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPane" fx:controller="sample.DialogModifyMeals"
            xmlns:fx="http://javafx.com/fxml">
<top>
<VBox   spacing="10"  alignment="CENTER" >

<HBox   alignment="CENTER" spacing="10"  >

    <Label text="Nome Pasto:"  />
    <TextField fx:id="nameMeals" prefWidth="200"   />
    <Label text="Orario:" />
    <TextField fx:id="hour" maxWidth="70"  alignment="CENTER" />

    <Label text="Kcal Totali Pasto:" layoutX="890.0" layoutY="2.4"></Label><TextField layoutX="990.0" layoutY="1.9" maxWidth="100"  fx:id="totKcalOverall" disable="true" style="-fx-text-fill: #000000;-fx-background-color: #FFFFFF;" />


</HBox>
</VBox>



</top>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <center>

    <VBox  fx:id="vboxMeals"  spacing="10" >

    </VBox>
    </center>

<bottom>
        <VBox spacing="10" >
            <HBox alignment="BOTTOM_RIGHT" spacing="10" >
                <Button fx:id="deleteButton" prefHeight="30.0" prefWidth="80.0"  text="Elimina" visible="false"></Button>
                <Button fx:id="okButton" prefHeight="30.0" prefWidth="80.0"  text="Salva" disable="true"></Button>
                <Button fx:id="cancelButton"  prefHeight="30.0" prefWidth="80.0" text="Chiudi"></Button>

            </HBox>
        </VBox>
</bottom>

</BorderPane>